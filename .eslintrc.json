{
  "ignorePatterns": ["**/*.css"],
  "extends": ["airbnb", "plugin:react/jsx-runtime", "prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "required": {
          "some": ["nesting", "id"]
        }
      }
    ],
    "jsx-a11y/label-has-for": [
      "error",
      {
        "required": {
          "some": ["nesting", "id"]
        }
      }
    ],
    "react/button-has-type": [
      true,
      {
        "button": true,
        "submit": true,
        "reset": true
      }
    ]
  }
}
